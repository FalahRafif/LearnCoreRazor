@page
@model BookListRazor.Pages.BookList.CreateModel
@{
}

<br />
<h2 class="text-info">Create New Book</h2>
<br />
@* Form *@
<div class="border container" style="padding:30px">
    <form method="post">
        @* Input *@
        <div class="form-group row">
            <div class="col-sm-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        @* Button *@
        <div class="form-group row">
            <div class="col-sm-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-sm-3">
                <a asp-page="Index" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>